<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent"
    tools:context=".DetailFilm">

    <TextView
        android:id="@+id/tv_detailjudulfilm"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Star Wars : EndGame"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/detail_imgfilm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_detailjudulfilm"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_detailtglfilm"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="12/12/2020"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/detail_imgfilm"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_detailsutradarafilm"
        android:textSize="20sp"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Paul Walker"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_detailtglfilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/updateFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deleteFilm"
        android:text="UPDATE DATA FILM" />

    <Button
        android:id="@+id/deleteFilm"
        android:text="DELETE DATA FILM"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tv_detailsutradarafilm"
        android:id="@+id/detail_filmdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>